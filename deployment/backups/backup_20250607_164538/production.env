# SPATIAL-6.2: Production Environment Configuration
# Pizza Classification Hybrid Dual-Model System

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=4
MAX_CONCURRENT_REQUESTS=100

# Model Configuration
PRIMARY_MODEL=spatial-mllm
FALLBACK_MODEL=standard-cnn
MODEL_TIMEOUT=30
INFERENCE_TIMEOUT=10

# Resource Management
GPU_MEMORY_LIMIT=8192  # MB
CPU_WORKERS=4
CACHE_SIZE=1000

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=INFO
METRICS_COLLECTION=true

# Health Checks
HEALTH_CHECK_INTERVAL=30
MODEL_WARMUP_ENABLED=true
STARTUP_TIMEOUT=300

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Deployment
DEPLOYMENT_MODE=production
VERSION=1.0.0
BUILD_DATE=2025-06-07
